<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>

  <h2>Select and/or enter post categories</h2>
  <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>
  <%= f.fields_for :categories, @post.categories.build do |cat| %>
    <%= cat.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
